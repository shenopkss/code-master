<?php
Route::group(['middleware' => ['auth']], function () {
{% for table in db.tables %}

Route::group(['prefix' => '{{ table.name }}s', 'middleware' => ['permission:{{table.name}}']], function()
{
    Route::get('/', '{{ table.name | camel }}Controller@index');
    Route::post('/', '{{ table.name | camel }}Controller@store');
    Route::get('/create', '{{ table.name | camel }}Controller@create');
    Route::get('/{id}', '{{ table.name | camel }}Controller@show');
    Route::get('/{id}/edit', '{{ table.name | camel }}Controller@edit');
    Route::put('/{id}', '{{ table.name | camel }}Controller@update');
    Route::delete('/{id}', '{{ table.name | camel }}Controller@destroy');
});
{% endfor %}

});
